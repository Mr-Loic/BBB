
import java.net.*;  
import java.io.*;

public class ConnectionHandler extends Thread
{
    private Socket clientSocket = null;				// Client socket object
    private ObjectInputStream is = null;			// Input stream
    private ObjectOutputStream os = null;			// Output stream
    private DateTimeService time;
    
	// The constructor for the connection handler
    public ConnectionHandler(Socket clientSocket,DateTimeService time) {
        this.clientSocket = clientSocket;
        this.time=time;
        //Set up a service object to get the current date and time
        //theDateService = new DateTimeService();
    }

    // Will eventually be the thread execution method - can't pass the exception back
    public void run() {
         try {
            this.is = new ObjectInputStream(clientSocket.getInputStream());
            this.os = new ObjectOutputStream(clientSocket.getOutputStream());
            while (this.readCommand()) {}
         } 
         catch (IOException e) 
         {
        	System.out.println("XX. There was a problem with the Input/Output Communication:");
            e.printStackTrace();
         }
    }

    // Receive and process incoming string commands from client socket 
    private boolean readCommand() {
    	
        DataSample s = null;
        
        
        try {
        	
            s = (DataSample) is.readObject();   
            
        } 
        catch (Exception e){    // catch a general exception
        	 
        	this.closeSocket();
            return false;
        }
       
        System.out.println("01. <- Received an object from the client , the command is: " + s.gettheDatacommand());
        System.out.println("The low_trigger is: " + s.getlow_trigger());
        System.out.println("The high_trigger is: " + s.gethigh_trigger());
        // At this point there is a valid String object
        // invoke the appropriate function based on the command 
        if (s.gettheDatacommand().equalsIgnoreCase("GetDate")){ 
            this.getDate(); 
        }       
        else { 
            this.sendError("Invalid command: " + s); 
        }
        return true;
    }
    
    public void getDate() {	// use the date service to get the date
        String currentDateTimeText = time.getDateAndTime();
       
        this.send(currentDateTimeText);
    }


    // Send a generic object back to the client 
    private void send(Object o) {
        try {
            System.out.println("02. -> Sending (" + o +") to the client.");
            this.os.writeObject(o);           
            this.os.flush();
        } 
        catch (Exception e) {
            System.out.println("XX." + e.getStackTrace());
        }
    }
    
    // Send a pre-formatted error message to the client 
    public void sendError(String message) { 
        this.send("Error:" + message);	//remember a String IS-A Object!
    }
    
    // Close the client socket 
    public void closeSocket() { //gracefully close the socket connection
        try {
            this.os.close();
            this.is.close();
            this.clientSocket.close();
        } 
        catch (Exception e) {
            System.out.println("XX. " + e.getStackTrace());
        }
    }
}
